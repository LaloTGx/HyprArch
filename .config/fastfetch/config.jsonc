//      "outputColor": "bright_light_blue"
//    },
// Muestra el titulo del audio cortado (custom command)
    {
      "type": "command",
      "shell": "/bin/bash",
      "param": "-c",
      "text": "title=$(playerctl metadata xesam:title 2>/dev/null); echo ${title:0:25}${title:+...}",
      "key": "",
      "keyColor": "bright_light_red",
      "format": "{result}",
      "outputColor": "bright_light_red"
    },
    {
      "type": "player",
      "key": "",
      "keyColor": "bright_light_red",
      "format":"{player} {#bright_light_red}",
      "outputColor":"bright_light_red"
    },
    {
        "type": "custom",
        "format": "{#bright_light_black}┗━{#yellow}━━━━━{#yellow}━━━━━{#blue} •{#blue}•"
    }

